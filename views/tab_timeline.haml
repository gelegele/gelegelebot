/ Time Line Page
- require './utils'

/ Page Header
%div.row.glgl-tab-header
  %div.span12
    %h3
      %a{:href=>"#{Utils::TWITTER_URL}#{@user_name}"}@#{@user_name}'s Time Line

/ Tweet List
%div.tweets
  -@time_line.each do |time_line_item|
    %div.row
      %div.span12.well.well-tweet
        %div.row
          %div.span1
            %a{:href=>"#{Utils::TWITTER_URL}#{time_line_item.user.screen_name}/status/#{time_line_item.id}"}
              %img.tweet-img{:src=>"#{time_line_item.user.profile_image_url}"}
          %div.span11
            %div.row
              %div.span7.tweet-name
                %a{:href=>"#{Utils::TWITTER_URL}#{time_line_item.user.screen_name}"} @#{time_line_item.user.screen_name}
              %div.span4
                %p.tweet-timestamp #{time_line_item.created_at}
            %div.row
              %div.span11
                %p.tweet-text= Utils.replace_to_a(time_line_item.text)
  %div.next
    %a.next{:href=>"/timeline?page=#{@page.to_i + 1}"}next
%hr
